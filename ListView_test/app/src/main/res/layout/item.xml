<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccddee"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/img"
        android:layout_height="90dp"
        android:src="@drawable/pig"
        android:layout_width="90dp" />

    <LinearLayout
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.59">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="60px"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/stu_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:text="631406010xxx" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <RadioButton
                android:text="在勤"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton_zq"
                android:layout_weight="1"
                android:duplicateParentState="false"
                android:focusable="false"
                android:checked="false" />

            <RadioButton
                android:text="迟到"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton_cd"
                android:layout_weight="1"
                android:focusable="false"
                android:checked="false" />

            <RadioButton
                android:text="早退"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton_zt"
                android:layout_weight="1"
                android:focusable="false"
                android:checked="false"
                android:duplicateParentState="false" />

            <RadioButton
                android:text="旷课"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton_kk"
                android:layout_weight="1"
                android:duplicateParentState="false"
                android:focusable="false"
                android:checked="false" />

            <RadioButton
                android:text="病假"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton_bj"
                android:layout_weight="1"
                android:checked="false"
                android:focusable="false"
                android:duplicateParentState="false" />
        </RadioGroup>

    </LinearLayout>
</LinearLayout>
