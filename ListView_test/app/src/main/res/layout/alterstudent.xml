<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addstudent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cfe2f4">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="\n修改信息"
        android:textSize="150px" />

    <ImageView
        app:srcCompat="@drawable/pig"
        android:layout_gravity="center"
        android:id="@+id/imageView_alter"
        android:layout_width="120dp"
        android:layout_height="160dp" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_width="329dp">

        <TextView
            android:id="@+id/textView_xh"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:gravity="right"
            android:text="学号"
            android:layout_width="50dp"
            android:layout_weight="0.34" />

        <EditText
            android:id="@+id/editText_xh"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:text="请在此输入学号"
            android:layout_weight="0.50" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_width="329dp">

        <TextView
            android:id="@+id/textView_xm"
            android:layout_height="wrap_content"
            android:textSize="50px"
            android:gravity="right"
            android:text="姓名"
            android:layout_width="50dp"
            android:layout_weight="0.34" />

        <EditText
            android:id="@+id/editText_xm"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:text="请在此输入姓名"
            android:layout_weight="0.50" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent">

        <Button
            android:text="查看原信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_look"
            android:layout_weight="1" />

        <Button
            android:text="提交修改"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_alter"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>